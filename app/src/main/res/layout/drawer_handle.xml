<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:background="@drawable/rounded_player_card"
        android:backgroundTint="#6E6E6E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="90dp"
        android:layout_height="14dp"
        android:background="#6E6E6E"
        android:backgroundTint="#6E6E6E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="75dp"
        android:layout_height="11dp"
        android:background="#424242"
        android:backgroundTint="#424242"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/insetHandle"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:background="@drawable/rounded_player_card"
        android:backgroundTint="#424242"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="72dp"
        android:layout_height="15dp"
        android:background="@drawable/rounded_player_card"
        android:backgroundTint="#6E6E6E"
        app:layout_constraintEnd_toEndOf="@+id/insetHandle"
        app:layout_constraintStart_toStartOf="@+id/insetHandle"
        app:layout_constraintTop_toTopOf="@+id/insetHandle" />

    <View
        android:id="@+id/accentColor"
        android:layout_width="72dp"
        android:layout_height="7dp"
        android:background="@color/black"
        android:backgroundTint="@color/manchester_blue"
        app:layout_constraintEnd_toEndOf="@+id/insetHandle"
        app:layout_constraintStart_toStartOf="@+id/insetHandle"
        app:layout_constraintTop_toTopOf="@+id/insetHandle" />
</androidx.constraintlayout.widget.ConstraintLayout>